@import "../../../../node_modules/bootstrap/dist/css/bootstrap.css"
@import "base.styl"
@import "article.styl"
@import "conum.css"

.post-series
  border-left 8px solid rgba-tertiary
  background-color rgba-tertiary-1
  padding .8em
  margin-bottom 1em

ul li > p
  margin 10px 0

.photo-credit
  @extend .sans-serif
  font-size 14px
  color color-meta
  text-align right
  div
    display inline-block
    padding 2px 15px
    background-color rgba(0,0,0,.6)
    a
      color color-meta
      text-decoration underline
      &:hover
        color brand-primary
