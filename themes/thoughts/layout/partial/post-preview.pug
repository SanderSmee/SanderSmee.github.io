include post-meta

mixin post_preview(post)
    article.post-preview
        if post.categories
            - post.categories.each(function(category) {
            a.category(href=url_for(category.path))=category.name
            - })
        header.post-header
            a(href=url_for(post.path))
                h2.post-title!= post.title
                if post.subtitle
                    h3.post-subtitle!= post.subtitle
        section.post-excerpt!= post.excerpt
        +post_meta(post)
        p.post-read-more
            a.btn.btn-outline-dark(href=url_for(post.path) + '#more')="Read more â†’"
